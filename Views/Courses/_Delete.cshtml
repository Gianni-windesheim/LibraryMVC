@model SoftwareDevelopment2.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" id="delete-id" />
        <br />
        <hr />
        <br />
        <div id="delete-buttons-wrap" class="row justify-content-center">
            <div class="col-md-6 text-center">
                <button class="btn btn-danger btn-block"
                        onclick="event.preventDefault(); document.getElementById('delete-closebutton').click();">No</button>
            </div>
            <div class="col-md-6 text-center">
                <button class="btn btn-success btn-block" type="submit"
                        value="Delete">Yes</button>
            </div>
        </div>
    </form>
</div>
